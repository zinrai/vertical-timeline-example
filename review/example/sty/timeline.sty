\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{timeline}[2023/08/01 Timeline Macros Package]

\RequirePackage{tikz}

% タイムラインエントリを定義するマクロ
\newcommand{\timelineentry}[3]{
  \node[year, anchor=east] at (-0.2, -#1) {#2};
  \node[event, anchor=west] at (0.2, -#1) {#3};
  \draw[thick] (-0.1,-#1) -- (0.1,-#1);
}
